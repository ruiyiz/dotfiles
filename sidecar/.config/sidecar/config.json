{
  "keymap": {
    "overrides": {}
  },
  "plugins": {
    "git-status": {
      "enabled": true,
      "refreshInterval": "1s"
    },
    "td-monitor": {
      "enabled": false,
      "refreshInterval": "2s",
      "dbPath": ".todos/issues.db"
    },
    "conversations": {
      "enabled": true,
      "claudeDataDir": "/home/rzhang/.claude"
    },
    "workspace": {
      "dirPrefix": true,
      "tmuxCaptureMaxBytes": 2097152
    }
  },
  "projects": {
    "mode": "single",
    "root": "."
  },
  "ui": {
    "showClock": false,
    "theme": {
      "name": "tokyo-night"
    },
    "nerdFontsEnabled": true
  }
}
