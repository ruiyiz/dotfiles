{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run typecheck)",
      "Bash(npm run test)",
      "Bash(git add:*)",
      "Bash(jq:*)",
      "Bash(quarto render:*)",
      "Bash(sed:*)",
      "Bash(python3:*)",
      "Bash(Rscript:*)",
      "WebSearch",
      "Bash(echo:*)",
      "Bash(cmd.exe /c echo %TEMP%)",
      "SlashCommand(/label-quarto-cells:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(npm publish:*)",
      "Bash(brew install:*)",
      "WebFetch"
    ],
    "defaultMode": "bypassPermissions"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/claude-tmux-alert.sh on",
            "async": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/claude-tmux-alert.sh on",
            "async": true
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/claude-tmux-alert.sh off",
            "async": true
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/claude-tmux-alert.sh off",
            "async": true
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/claude-tmux-alert.sh off",
            "async": true
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "commit-commands@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true
  },
  "skipDangerousModePermissionPrompt": true,
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); basename_cwd=$(basename \"$cwd\"); output=$(printf \"\\033[36m%s\\033[0m\" \"$basename_cwd\"); git_branch=$(cd \"$cwd\" 2>/dev/null && git -c core.useBuiltinFSMonitor=false branch --show-current 2>/dev/null); if [ -n \"$git_branch\" ]; then output=$(printf \"%s \\033[31m%s\\033[0m\" \"$output\" \"$git_branch\"); dirty=$(cd \"$cwd\" 2>/dev/null && git -c core.useBuiltinFSMonitor=false status --porcelain 2>/dev/null); if [ -n \"$dirty\" ]; then output=$(printf \"%s \\033[33m✗\\033[0m\" \"$output\"); fi; ahead=$(cd \"$cwd\" 2>/dev/null && git -c core.useBuiltinFSMonitor=false rev-list --count @{u}..HEAD 2>/dev/null); if [ -n \"$ahead\" ] && [ \"$ahead\" -gt 0 ] 2>/dev/null; then output=$(printf \"%s \\033[32m↑%s\\033[0m\" \"$output\" \"$ahead\"); fi; fi; echo \"$output\""
  }
}
