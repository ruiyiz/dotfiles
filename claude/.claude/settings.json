{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run typecheck)",
      "Bash(npm run test)",
      "Bash(git add:*)",
      "Bash(jq:*)",
      "Bash(quarto render:*)",
      "Bash(sed:*)",
      "Bash(python3:*)",
      "Bash(Rscript:*)",
      "WebSearch",
      "Bash(echo:*)",
      "Bash(cmd.exe /c echo %TEMP%)",
      "SlashCommand(/label-quarto-cells:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(npm publish:*)",
      "Bash(brew install:*)",
      "WebFetch"
    ],
    "defaultMode": "bypassPermissions"
  },
  "enabledPlugins": {
    "commit-commands@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true
  }
}
