[
  // ================================
  // Positron
  // ================================
  {
    "key": "ctrl+'",
    "command": "workbench.action.positronConsole.focusConsole",
    "when": "isPositron && editorTextFocus"
  },
  {
    "key": "ctrl+'",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "isPositron && (positronConsoleFocused || !inputFocus)"
  },
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.positronConsole.clearConsole",
    "when": "isPositron && (positronConsoleFocused || editorTextFocus)"
  },
  {
    "key": "ctrl-shift-f10",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.positronConsole.clearConsole",
        "workbench.action.language.runtime.restartActiveSession",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    "when": "isPositron"
  },
]